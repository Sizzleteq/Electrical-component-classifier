    "from sklearn.preprocessing import StandardScaler\n",
    "import joblib\n",
    "import pandas as pd\n",
    "import numpy as np\n",
    "\n",
    "# Example ARX features (replace this with your real feature data)\n",
    "X = pd.DataFrame({\n",
    "    'y_lag1': np.random.rand(100),\n",
    "    'y_lag2': np.random.rand(100),\n",
    "    'u': np.random.rand(100),\n",
    "    'u_lag1': np.random.rand(100)\n",
    "})\n",
    "\n",
    "# Create and fit the scaler\n",
    "scaler = StandardScaler()\n",
    "scaler.fit(X)\n",
    "\n",
    "# Save the scaler as a .pkl file\n",
    "joblib.dump(scaler, 'scaler.pkl')\n",
    "print(\"Scaler saved as 'scaler.pkl'\")\n"
   ]
